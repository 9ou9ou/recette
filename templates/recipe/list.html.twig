{% extends "base.html.twig" %}
{% block head %} 
<style>
.container{
  max-width:1200px;

}
.galery{
  margin:2px;
  border:1px solid #ccc;
  float:left;
  width:290px;
}
.galery img{
  width:100%;
  height:auto;
}
.desc{
  padding:15px;
  text-align:center;
}
</style>
{% endblock %}
{% block body %}
<section >
<div class="container">
     {% for recipe in recipes %}
     <div class="galery">
     <img src="{{ asset('img/core-img/recette-chakchouka.jpg') }}" alt="">
     <div class="desc">
 <a href="{{ path('recipe_show', {id: recipe.id}) }}"  >{{recipe.name}}</a>
</div>
</div>
</div>
    {% endfor %} 
</section>
{% endblock %}

      